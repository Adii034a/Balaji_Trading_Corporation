<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="61dp"
        android:layout_height="65dp"
        android:contentDescription="Close button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="571dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="16dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:gap="8dp"
            android:padding="8dp"
            android:rowCount="3"
            tools:ignore="MissingConstraints">

            <!-- Pipe 1 -->
            <LinearLayout
                android:id="@+id/pipe_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="83dp"
                    android:layout_height="74dp"
                    android:src="@drawable/bg_pvc" />

                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="8dp"
                    android:text="PVC Pipe 1m ₹150"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/button_pipe_1"
                    android:layout_width="123dp"
                    android:layout_height="wrap_content"
                    android:text="Cart" />
            </LinearLayout>

            <!-- Pipe 2 -->
            <LinearLayout
                android:id="@+id/pipe_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="83dp"
                    android:layout_height="74dp"
                    android:src="@drawable/bg_upvc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="8dp"
                    android:text="UPVC Pipe 1.5m ₹200"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/button_pipe_2"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:text="Cart" />
            </LinearLayout>

            <!-- Pipe 3 -->
            <LinearLayout
                android:id="@+id/pipe_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="83dp"
                    android:layout_height="74dp"
                    android:src="@drawable/bg_hdpe" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="8dp"
                    android:text="HDPE Pipe 2m ₹250"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/button_pipe_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cart" />
            </LinearLayout>

            <!-- Pipe 4 -->
            <LinearLayout
                android:id="@+id/pipe_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="83dp"
                    android:layout_height="74dp"
                    android:src="@drawable/bg_gi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="8dp"
                    android:text="GI Pipe 1m ₹300"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/button_pipe_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cart" />
            </LinearLayout>

            <!-- Pipe 5 -->
            <LinearLayout
                android:id="@+id/pipe_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="83dp"
                    android:layout_height="74dp"
                    android:src="@drawable/bg_cpvc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="8dp"
                    android:text="CPVC Pipe 1.5m ₹180"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/button_pipe_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cart" />
            </LinearLayout>

            <!-- Pipe 6 -->
            <LinearLayout
                android:id="@+id/pipe_6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="83dp"
                    android:layout_height="74dp"
                    android:src="@drawable/bg_steel" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="8dp"
                    android:text="Steel Pipe 2m ₹350"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/button_pipe_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cart" />
            </LinearLayout>
        </GridLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
